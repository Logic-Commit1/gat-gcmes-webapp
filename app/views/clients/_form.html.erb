<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :company, style: "display: block" %>
    <%= form.radio_button :partner, "GAT" %> GAT
    <%= form.radio_button :partner, "GCMES" %> GCMES
  </div>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, placeholder: "Philippine Span Asia Carrier Corp." %>
  </div>
  <div>
    <%= form.label :code, style: "display: block" %>
    <%= form.text_field :code %>
  </div>
  <div>
    <%= form.label :contacts, style: "display: block" %>
    <%= form.text_field :contacts %>
  </div>
  <div>
    <%= form.label :address, style: "display: block" %>
    <%= form.text_area :address %>
  </div>
  <div>
    <%= form.label :tin, style: "display: block" %>
    <%= form.number_field :tin %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
