<div class="nested-form-wrapper" style="margin-bottom: 0;" data-new-record="<%= f.object.new_record? %>">
  <table class="allowance-table" data-form-validation-target="particularsTable">
    <tbody>
      <tr data-new-record="<%= f.object.new_record? %>" >
        <td style="width: 30%;">
          <%= f.text_field :name %>
        </td>
        <td style="width: 10%;">
          <%= f.number_field :allowance, placeholder: "0.00", style: "text-align: right", data: { action: "input->total-calculator#calculateAllowanceTotal" }, onwheel: "return false" %>
        </td>
        <td style="width: 15%;">
          <%= f.text_field :remarks %>
        </td>
        <td style="width: 3%; text-align: center; vertical-align: middle;">
          <% if f.object.request_form&.particulars&.first != f.object %>
            <%= link_to "<i class='fas fa-trash'></i>".html_safe, "#", class: "remove-item-button", data: { action: "nested-form#remove" } %>
            <%= f.hidden_field :_destroy %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>