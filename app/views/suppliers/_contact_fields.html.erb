<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <table class="contact-table">
    <tbody>
      <tr>
        <td style="width: 20%;">
          <%= f.text_field :name, placeholder: 'Juan Dela Cruz' %>
        </td>
        <td style="width: 15%;">
          <%= f.text_field :emails, multiple: true, value: f.object.emails&.join(", "), 
          placeholder: 'sales@company.com' %>
        </td>
        <td style="width: 15%;">
          <%= f.text_field :contact_numbers, multiple: true, 
          value: f.object.contact_numbers&.join(", "),
          placeholder: '0912 345 6789' %>
        </td>
        <td style="width: 3%; text-align: center; vertical-align: middle;">
          <%= link_to "<i class='fas fa-trash'></i>".html_safe, "#", 
          class: "remove-item-button",
          data: { action: "nested-form#remove" } %>
          <%= f.hidden_field :_destroy %>
        </td>
      </tr>
    </tbody>
  </table>
</div>