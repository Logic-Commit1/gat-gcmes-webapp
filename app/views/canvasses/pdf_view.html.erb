<div class="pdf-container">
  <header>
    <div class="old-header">
      <!--
      <div class="logo">
        <%= image_tag "#{request.base_url}/assets/gat-logo.png", style: "width: 100px; height: 50px;" %>
      </div>
    -->
      <p id="company-name"><%= @canvass.company.name.upcase %></p>
      <p id="company-address">169 M.H. DEL PILAR STREET, TINAJEROS, MALABON CITY</p>
      <p id="company-proprietor">GENO D. BAUTISTA</p>
      <p id="company-contact-number"><%= @canvass.company.contact_numbers.join(' , ') %></p>
      <p id="company-email"><%= @canvass.company.emails.join(' , ') %></p>
    </div>
  </header>
  <p class="description"><strong>Product Description:</strong> <%= @canvass.description %></p>
  <p class="quantity-unit"><strong>Quantity & Unit:</strong> <%= @canvass.quantity %> <%= @canvass.unit %></p>
  <% @canvass.suppliers.each do |product_info| %>
    <% product_info.each do |description, suppliers| %>
      <table class="canvass-table" border="1" style="width: 100%; border-collapse: collapse;">
        <thead>
          <tr>
            <th>Supplier Name</th>
            <th>Price</th>
            <th>Terms</th>
            <th>Remarks</th>
          </tr>
        </thead>
        <tbody>
          <% suppliers.each do |supplier_info| %>
            <% supplier_info.each do |supplier_name, details| %>
              <tr>
                <td><%= supplier_name %></td>
                <td><%= details[0] %></td>
                <!-- Price -->
                <td><%= details[1] %></td>
                <!-- Terms -->
                <td><%= details[2] %></td>
                <!-- Remarks -->
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    <% end %>
  <% end %>
</div>